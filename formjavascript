<body>
    <h2 style="color:navy">Program Menghitung Volume Balok</h2>
    <h4 style="color:cadetblue">Oleh : Muhammad Tanjilal</h4>
    <br>
    
    <span style="color:red">Panjang </span><input type="number" id="panjang"><br><br>
    <span style="color:red">Lebar </span><input type="number" id="lebar"><br><br>
    <span style="color:red">Tinggi </span><input type="number" id="tinggi"><br><br>
    <button onclick="hitungVolume()">Hitung Volume</button>
    <p id="hasil"></p>
    <script>
        // Hitung Volume
        function hitungVolume() {
            let panjang = document.getElementById("panjang").value
            let lebar = document.getElementById("lebar").value
            let tinggi = document.getElementById("tinggi").value
            let hasil = document.getElementById("hasil")
            let volume = panjang * lebar * tinggi
            hasil.innerText = "Volume Balok : " + volume
        }
    </script>
</body>
